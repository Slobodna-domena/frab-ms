<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "loginForm" }) do |f| %>
  <h5>Zaboravljena lozinka?</h5>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "PoÅ¡lji mi upute na e-mail" %>
  </div>
  <hr>
  <p><%= render "devise/shared/links" %></p>
<% end %>
